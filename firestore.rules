# Firestore Security Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is active
    function isActiveUser() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only update their own profile
      // Admins can update any profile
      allow write: if isAuthenticated() && (isOwner(userId) || hasRole('admin'));
      
      // Only admins can create new users
      allow create: if hasRole('admin');
      
      // Prevent users from changing sensitive fields
      allow update: if isAuthenticated() && 
                      isOwner(userId) &&
                      // Ensure uid, createdAt, and role cannot be modified
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['uid', 'createdAt', 'role']);
    }
    
    // Patients collection
    match /patients/{patientId} {
      // Only active authenticated users can read/write patients
      allow read, write: if isActiveUser();
      
      // Ensure required fields are present on create
      allow create: if isActiveUser() && 
                      request.resource.data.keys().hasAll(['patientName']);
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      // Authenticated users can read all appointments
      allow read: if isActiveUser();
      
      // Only doctors and admins can create/update appointments
      allow write: if isActiveUser() && 
                     (hasRole('doctor') || hasRole('admin'));
      
      // Ensure appointments have required fields
      allow create: if request.resource.data.keys().hasAll(['patientId', 'doctorId', 'date', 'type', 'status']);
    }
    
    // Surgeries collection
    match /surgeries/{surgeryId} {
      // Authenticated users can read all surgeries
      allow read: if isActiveUser();
      
      // Only doctors and admins can create/update surgeries
      allow write: if isActiveUser() && 
                     (hasRole('doctor') || hasRole('admin'));
      
      // Ensure surgeries have required fields
      allow create: if request.resource.data.keys().hasAll(['patientId', 'surgeonId', 'procedure', 'status']);
    }
  }
}
